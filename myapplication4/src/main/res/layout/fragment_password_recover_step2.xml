<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <fragment
            android:id="@+id/input_password"
            class="com.example.myapplication.fragment.inputcells.SimpleTextInputCellFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_inputcell_simpletext" />

        <fragment
            android:id="@+id/input_password_repeat"
            class="com.example.myapplication.fragment.inputcells.SimpleTextInputCellFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_inputcell_simpletext" />

        <Button
            android:id="@+id/btn_passwordRecover_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="提交" />

    </LinearLayout>
</RelativeLayout>
